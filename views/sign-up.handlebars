<section class="signup-section">
    {{#if (and (not isUser) (not isRecruiter))}}
    {{!-- giving 2 links --}}
    <a href="/signup/user" class="link sign-up-link">Sign up as job seeker</a>
    <a href="/signup/recruiter" class="link sign-up-link">Sign up as recruiter</a>
    {{else}}
    <form class="signup-form">
        <div class="form-group">
            <span class="label">Account</span>
            <input type="email" placeholder="Enter your email" id="email" autocomplete="off">
            <input type="text" placeholder="Enter your username" id="username" autocomplete="off">
            <input type="password" placeholder="Enter your password" id="password" autocomplete="off">
            <input type="password" placeholder="Confirm your password" id="confirm-password" autocomplete="off">
        </div>
        <div id="message"></div>
        <div class="form-group mb-1">
            <span class="label">Information</span>
            {{#if isRecruiter}}
            <input type="text" placeholder="Enter your company name" id="company-name" autocomplete="off">
            <input type="text" placeholder="Enter your company location" id="location" autocomplete="off">
            {{else}}
            <input type="text" placeholder="Enter your first name" id="first-name" autocomplete="off">
            <input type="text" placeholder="Enter your last name" id="last-name" autocomplete="off">
            <input type="text" placeholder="Enter your desire job" id="job-title" autocomplete="off">
            {{/if}}
        </div>
        <div class="btn-container">
            <button class="btn" type="submit">Sign Up</button>
        </div>
    </form>
    <p>Already have account? <a href="/login" class="link">Sign In</a> here</p>
    {{/if}}
</section>