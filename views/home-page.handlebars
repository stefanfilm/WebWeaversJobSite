{{#if (and loggedIn isUser)}}
<section class="user-section">
    <div class="img-container">
        <img src="{{user.img}}" alt="user image profile" class="img">
    </div>
    <h3>{{user.first_name}} {{user.last_name}}</h3>
    <p class="user-job">{{user.job_title}}</p>
</section>
{{else if (and loggedIn isRecruiter)}}
<section class="user-section">
    <div class="img-container">
        <img src="{{user.img}}" alt="company logo" class="img">
    </div>
    <h3>{{user.company_name}}</h3>
</section>
{{/if}}
<section class="job-section">
    <form id="search-form">
        <input type="text" placeholder="Search for jobs..." id="search-input" class="search-input" autocomplete="off">
    </form>
    <ul class="list job-list">
        {{#each jobs as |job|}}
        {{> job-details}}
        {{/each}}
    </ul>
</section>